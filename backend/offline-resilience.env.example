# Offline Resilience Configuration
# Copy these values to your .env file and adjust as needed

# ============================================
# Offline Payments Configuration
# ============================================

# Enable offline payment processing
OFFLINE_PAYMENTS_ENABLED=true

# Maximum transaction amount allowed in offline mode (in dollars)
# Recommended: Set based on your risk tolerance
OFFLINE_MAX_TRANSACTION_AMOUNT=500

# Maximum daily total for offline payments per location (in dollars)
# Recommended: Set based on your daily transaction volume
OFFLINE_MAX_DAILY_TOTAL=5000

# Require manager approval for offline card payments
# Recommended: true for additional security
OFFLINE_REQUIRE_MANAGER_APPROVAL=true

# Allowed payment methods in offline mode (comma-separated: cash,card)
# Recommended: cash,card (cash is always safe, card has limits)
OFFLINE_ALLOWED_PAYMENT_METHODS=cash,card

# ============================================
# Network Monitoring Configuration
# ============================================

# How often to check network connectivity (in seconds)
# Default: 30 seconds
NETWORK_CHECK_INTERVAL=30

# Number of consecutive failures before considering offline
# Default: 2 (1 minute with 30s interval)
NETWORK_FAILURE_THRESHOLD=2

# ============================================
# Offline Queue Configuration
# ============================================

# Maximum number of concurrent queue operations to process
# Default: 5
OFFLINE_QUEUE_MAX_CONCURRENT=5

# How often to process the offline queue (in minutes)
# Default: 2 minutes
OFFLINE_QUEUE_PROCESS_INTERVAL=2

# Maximum retry attempts for failed operations
# Default: 5
OFFLINE_QUEUE_MAX_RETRIES=5

# How long to keep completed queue items (in days)
# Default: 7 days
OFFLINE_QUEUE_RETENTION_DAYS=7

# ============================================
# Conexxus Offline Sync Configuration
# ============================================

# Enable automatic end-of-day sync queuing
# Default: true
CONEXXUS_AUTO_EOD_SYNC=true

# Time to queue end-of-day sync (24-hour format: HH:MM)
# Default: 23:30 (11:30 PM)
CONEXXUS_EOD_SYNC_TIME=23:30

# Priority for Conexxus sync operations (1-10, higher = more important)
# Default: 8
CONEXXUS_SYNC_PRIORITY=8

# Maximum retry attempts for Conexxus sync
# Default: 10
CONEXXUS_SYNC_MAX_RETRIES=10

# ============================================
# Example Production Values
# ============================================

# For a high-volume store:
# OFFLINE_MAX_TRANSACTION_AMOUNT=1000
# OFFLINE_MAX_DAILY_TOTAL=10000
# OFFLINE_REQUIRE_MANAGER_APPROVAL=true
# OFFLINE_QUEUE_MAX_CONCURRENT=10

# For a low-volume store:
# OFFLINE_MAX_TRANSACTION_AMOUNT=200
# OFFLINE_MAX_DAILY_TOTAL=2000
# OFFLINE_REQUIRE_MANAGER_APPROVAL=false
# OFFLINE_QUEUE_MAX_CONCURRENT=3

# For maximum security (cash only offline):
# OFFLINE_ALLOWED_PAYMENT_METHODS=cash
# OFFLINE_REQUIRE_MANAGER_APPROVAL=true

