{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "npm run build && node dist/prisma/seed.js",
    "db:seed": "npm run seed",
    "rotate-key": "npm run build && node dist/scripts/rotate-encryption-key.js",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:status": "prisma migrate status",
    "migrate:test": "bash scripts/test-migrations.sh",
    "migrate:check": "bash scripts/check-migrations.sh",
    "migrate:sqlite-to-postgres": "ts-node scripts/migrate-sqlite-to-postgres.ts",
    "openapi:generate": "npm run build && node dist/scripts/generate-openapi-spec.js",
    "verify:webhooks": "ts-node scripts/verify-webhooks.ts",
    "load-test": "artillery run test/load/load-test.yml",
    "load-test:report": "artillery run --output test/load/results/report.json test/load/load-test.yml && artillery report test/load/results/report.json",
    "load-test:stress": "artillery run test/load/stress-test.yml",
    "load-test:spike": "artillery run test/load/spike-test.yml",
    "load-test:validate": "node test/load/validate-setup.js",
    "load-test:fix": "node test/load/agentic-fix-loop.js",
    "dr:restore": "ts-node scripts/disaster-recovery/restore-database.ts",
    "dr:test": "ts-node scripts/disaster-recovery/test-dr-procedures.ts",
    "dr:list-backups": "curl http://localhost:3000/api/backup/list -H \"Authorization: Bearer $ADMIN_TOKEN\"",
    "backup:create": "curl -X POST http://localhost:3000/api/backup/create -H \"Authorization: Bearer $ADMIN_TOKEN\""
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/client": "^7.2.0",
    "@sentry/node": "^7.99.0",
    "@sentry/profiling-node": "^1.3.5",
    "@types/bcrypt": "^6.0.0",
    "@types/cls-hooked": "^4.3.9",
    "@types/cookie-parser": "^1.4.10",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cls-hooked": "^4.2.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "fast-xml-parser": "^5.3.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "openai": "^6.15.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "stripe": "^20.1.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.3",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^7.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
