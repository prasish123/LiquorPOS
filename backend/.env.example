DATABASE_URL="file:./dev.db"
CLOUD_DATABASE_URL="postgresql://user:password@localhost:5432/liquor_pos"
REDIS_URL="redis://localhost:6379"

# libSQL Sync
LIBSQL_SYNC_URL="http://localhost:8080"
LIBSQL_AUTH_TOKEN="your-auth-token-here"

# Security
JWT_SECRET="your-secret-key-change-in-production-use-long-random-string"
SSL_KEY_PATH="./certs/server.key"
SSL_CERT_PATH="./certs/server.cert"
COOKIE_DOMAIN=".example.com"

# CORS Configuration (REQUIRED)
# Comma-separated list of allowed origins for CORS
# Example: ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://pos.example.com
ALLOWED_ORIGINS="http://localhost:5173"

# Audit Log Encryption (REQUIRED)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# CRITICAL: Backup this key securely - losing it means audit logs cannot be decrypted
AUDIT_LOG_ENCRYPTION_KEY="GENERATE_AND_REPLACE_THIS_32_BYTE_BASE64_KEY"

# Payments
# STRIPE_SECRET_KEY is REQUIRED for card payments (mock payments removed for security)
# Get your key from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"

# Integrations
CONEXXUS_SAMPLE_PATH="./sample-files"

# API Keys
OPENAI_API_KEY="sk-your-key-here"

# Environment
NODE_ENV="development"
PORT=3000
