    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order - Cash Payment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Order created successfully\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData.status).to.eql('completed');",
                  "    pm.environment.set(\"ORDER_ID\", jsonData.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"locationId\": \"loc-1\",\n  \"terminalId\": \"term-1\",\n  \"employeeId\": \"emp-1\",\n  \"items\": [\n    {\n      \"productId\": \"prod-1\",\n      \"quantity\": 2,\n      \"unitPrice\": 19.99\n    },\n    {\n      \"productId\": \"prod-2\",\n      \"quantity\": 1,\n      \"unitPrice\": 29.99\n    }\n  ],\n  \"paymentMethod\": \"cash\",\n  \"amountTendered\": 100.00\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/orders",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "orders"]
            }
          },
          "response": []
        },
